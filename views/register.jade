extends layout

// 用户注册页
block content
    h1= title
    p Welcome to #{title}
    form(action='/register/check', method='post')
        div 用户名：
            input(type='text', name='user', placeholder='用户名')
        div 密码：
            input(type='password', name='password', placeholder='密码')
        div email：
            input(type='text', name='email', placeholder='密码')
        div 出生年：
            input(type='birthYear', name='birthYear', placeholder='出生年')
        div 出生月：
            input(type='text', name='birthMonth', placeholder='出生月')
        div 出生日：
            input(type='text', name='birthDate', placeholder='出生日')
        div QQ：
            input(type='text', name='qq', placeholder='QQ')
        div 微信：
            input(type='text', name='weixin', placeholder='微信')
        div 新浪：
            input(type='text', name='sina', placeholder='新浪')
        input(type='submit')